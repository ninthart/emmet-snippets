{
    "css": {
        "snippets": {
            "c": "/**\n*------------------------------------------ \n* ${1:Section} \n*------------------------------------------\n*/\n",
            "!i": "!important;",
            ";bef": ":before ${1}",
            ";aft": ":after ${1}",
            ";fch": ":first-child ${1}",
            ";lch": ":last-child ${1}",
            ";och": ":only-child ${1}",
            ";oot": ":only-of-type ${1}",
            ";fot": ":first-of-type ${1}",
            ";nch": ":nth-child(${1}) ${2}",
            ";nlc": ":nth-last-child(${1}) ${2}",
            ";not": ":nth-of-type(${1}) ${2}",
            ";nlt": ":nth-last-of-type(${1}) ${2}",
            "mza": "margin: 0 auto",
            "dg": "display: grid",
            "dig": "display: inline-grid",
            "gtc": "grid-template-columns: ${1}",
            "gtr": "grid-template-rows: ${1}",
            "gta": "grid-template-areas: \n${1}",
            "gc": "grid-column: ${1}",
            "gr": "grid-row: ${1}",
            "ga": "grid-area: ${1}",
            "gg": "grid-gap: ${1}",
            "gcp": "grid-column-gap: ${1}",
            "grp": "grid-row-gap: ${1}",
            "grs": "grid-row-start: ${1}",
            "gcs": "grid-column-start: ${1}",
            "gre": "grid-row-end: ${1}",
            "gce": "grid-column-end: ${1}",
            "gaf": "grid-auto-flow",
            "gar": "grid-auto-rows",
            "gac": "grid-auto-columns"
        }
    },
    "html": {
        "filters": "html",
        "snippets": {
            "pp": "<?php ${1} ?>",
            "php": "<?php\n\t${1}\n?>",
            "php:foreach": "<?php foreach (\\$array as \\$k=>\\$v) {\n\t${2}${1} \n} ?>",
            "php:if": "<?php if ( ${1} ) : ?>",
            "php:while": "<?php while ( ${1} ); ?>",
            "php:elseif": "<?php elseif ( ${1} ) : ?>",
            "php:else" : "<?php else : ?>${1}",
            "php:endif": "<?php endif; ?>${1}",
            "php:endwhile": "<?php endwhile; ?>${1}",
            "wp:th": "<?php\n/**\n * Template Name: ${1} \n *\n * The ${2} for the ${3} theme\n *\n * @package ${4}\n*/\n?>",
            "wp:gh": "<?php get_header(); ?>\n",
            "wp:gf": "<?php get_footer(); ?>",
            "wp:gs": "<?php get_sidebar(); ?>",
            "wp:if": "<?php if ( have_posts() ) : ?>\n",
            "wp:hp": "<?php while ( have_posts() ) : the_post(); ?>\n",
            "wp:gt": "<?php get_template_part( '${1}', '${2}' ); ?>\n",
            "wp:bp": "<?php bloginfo( 'template_directory' ); ?>",
            "wp:gbts": "wp_gbts_boilerplate"
        }
    },
    "scss": {
        "extends": "css",
        "snippets": {
            "@inc": "@include ${1};",
            "@ext": "@extend %${1};",
            "ibp": "@include breakpoint(${1}) {\n\t\n}",
            "@imp": "@import '${1}';",
            "!d": "!default;",
            "imb": "@include mappy-bp(${1}) {\n\t\n}",
            "mbu": "@include media-breakpoint-up(${1}) {\n\t\n}",
            "mbd": "@include media-breakpoint-down(${1}) {\n\t\n}",
            "mbo": "@include media-breakpoint-only(${1}) {\n\t\n}",
            "mbb": "@include media-breakpoint-between(${1},${2}) {\n\t\n}"
        }
    },
    "clike": {
        "snippets": {
            "c": "/**\n*------------------------------------------ \n* ${1:Section} \n*------------------------------------------\n*/\n",
            "foreach": "foreach(\\$array as \\$k=>\\$v) {\n\t${child}${1} \n} \n"
        }
    }
}
